<div class="form-group">
  <label for="topic">Topic</label>
  <input
    type="text"
    class="form-control"
    id="topic"
    name="topic"
    required
    value="<%= post.topic %>"
  />
</div>

<div class="form-group">
  <label for="name">Name</label>
  <input
    type="text"
    class="form-control"
    id="name"
    name="name"
    required
    value="<%= post.name %>"
  />
</div>

<div class="from-group">
  <label for="message">Message</label>
  <textarea
    name="message"
    id="message"
    cols="10"
    rows="10"
    type="text"
    class="form-control"
    required
  >
<%= post.message %></textarea
  >
</div>

<button type="submit" class="btn btn-primary btn-lg active">Submit</button>
